<div>
  <div class="pull-left">
      <h1>list All Pages</h1>
  </div>
  <div class="pull-right">
    <%= link_to "New Page", new_admin_page_path, class: "btn btn-default" %>
  </div>
</div>
<table class="table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Action </th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= page.status %></td>
      <td><%= link_to "Edit", edit_admin_page_path(page) %>
          <%= link_to "Delete", admin_page_path(page), method: :delete, data:{confirm: "are you sure"}%>

      </td>
    </tr>
    <% end %>
  </tbody>

</table>
