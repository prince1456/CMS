<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="table-header">
                <h3>
                    New tag Form
                </h3>
            </div>
            <%= form_for [:admin, @tag] do |f| %>
            <%= f.text_area(:name, cols: 4, rows: 8, placeholder: 'e.g Ruby, Payton, Php', class: "form-control")%>
            <br>
            <%= f.submit class:"form-control" %>
            <% end %>
        </div>
        <div class="col-md-8">
            <div class="box">
                <div class="table-header">
                    <h3>
                        Tags
                    </h3>
                </div>
                <table class="table table-striped table-responsive table-hover">
                    <thead>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </thead>
                    <tbody>
                        <% @tags.each do |tag| %>
                        <tr>
                            <td><%= tag.name %></td>
                            <td><%= status_convertor(tag.in_use?, truthy: "in use", falsey: "Not in use") %></td>
                            <td><%= time_ago tag.created_at %></td>
                            <td><%= link_to edit_admin_tag_path(tag) do %>
                                <button type="button">
                                    Edit
                                </button>
                                <% end %>
                                <%= create_deletable_button tag %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                <div class="digg_pagination text-center">
                    <%= paginate @tags %>
                </div>
            </div>
        </div>
    </div>
</div>
