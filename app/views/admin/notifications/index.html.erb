<div class="box">
    <div class="table-header ">
        <div class="pull-left">
            <h4>Notifications</h4>
        </div>
        <div class="pull-right">
            <%=
      if Notification.any?
        link_to 'Dismiss All', dismiss_all_notification_path, method: :delete, class: "btn btn-default"
      end
     %>
        </div>
    </div>
    <br>

    <div class="comment-box">

        <% @visitor_notifications.each do |notif| %>
        <p>
            <%= notif.notifiable.fullname %>
            <%= "#{notif.notifiable.fullname} added as a new visitor #{time_ago notif.created_at}" %>
            <%= link_to "Dismiss", admin_notification_path(notif), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-xs" %>
        </p>
        <% end %>
        <hr>
        <% @comment_notifications.each do |notif| %>
        <p>

            <%= "#{notif.notifiable.visitor.fullname} added as a new comment #{time_ago notif.created_at}" %>
            <%= link_to "Dismiss", admin_notification_path(notif), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-xs" %>
        </p>
        <% end %>
        <hr>
        <% @message_notifications.each do |notif| %>
        <p>
            <%= "#{notif.notifiable.visitor.fullname} sent you a message #{time_ago notif.created_at}" %>
            <%= link_to "Dismiss", admin_notification_path(notif), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default btn-xs" %>
        </p>
        <% end %>
    </div>
