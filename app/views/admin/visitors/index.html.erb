<div class="box">
    <div class="table-header ">
        <h3>All Visitors</h3>
    </div>
    <table class="table .table-striped table-responsive table-hover">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Created at</th>
            <th>Action</th>
        </tr>
        <% @visitors.each do |v| %>
        <tr>
            <td>
                <p>
                    <%= v.fullname %></p>
            </td>
            <td>
                <p><%= v.email %></p>
            </td>
            <td><%= time_ago v.created_at %></td>
            <td>
                <%= link_to "Delete", admin_visitor_path(v), method: :delete, data: {confirm: "Are you sure you want delete the visitor"} %>
            </td>
        </tr>
        <% end %>
    </table>
    <div class="digg_pagination text-center">
        <%= paginate @visitors %>
    </div>
</div>
