<p><%= render "validation_errors", object: @post %></p>

<%= form_for [:admin, @post] do |f| %>
<p> <%= f.label :title %>
<%= f.text_field :title %></p><br>
<p><%= f.label :content %>
<%= f.text_field :content %></p><br>
<p><%= f.label :image %>
<%= f.file_field :image %>
<p><%= f.label :publish %>
<%= f.check_box :publish %></p><br>
<%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, {prompt: 'Select Tag'}, multiple: :true %>
<%= f.submit %>
<% end %>
