<%= form_for [:admin, @setting], class: "form-horizontal" do |f|%>
   <div class="form-group">
   <%= f.label :site_name, class:"col-sm-2 control-label" %>
      <%= f.text_field :site_name, class: "form-control" %>

  </div>
  <div class="form-group">
        <%= f.label :post_per_page, class:"col-sm-2 control-label"%>
        <%= f.number_field :post_per_page, class:"form-control" %>
  </div>
  <div class="checkbox">
     <label>
    <%= f.check_box :under_maintenance %> Check me out
     </label>
   </div>



  <div class="form-group">
       <%= f.label :prevent_commenting %> <br>
        <%= f.select :prevent_commenting, [['disable', false], ['active', true]]%>
    </div>

    <p> <%= f.label :tag_visibility %> <br>
        <%= f.select :tag_visibility, [['active', true], ['disable', false]]%>
    </p>
    <%= f.submit "Save", class:"form-group btn btn-default btn-lg" %>
<% end %>
